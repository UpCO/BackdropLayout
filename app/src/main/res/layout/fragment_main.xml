<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.upco.components.backdroplayout.BackdropLayout
        android:id="@+id/bdl_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:sheet="@layout/backdrop_sheet_main_organizations"
        app:subheader="@layout/backdrop_sheet_header"
        app:bd1_openTitle="Menu"
        app:bd1_closeTitle="@string/app_name"
        app:bd1_openIcon="@drawable/ic_close_to_menu_24dp"
        app:bd1_closeIcon="@drawable/ic_menu_to_close_24dp"
        app:bd1_revealHeight="@dimen/bd1_reveal_height"
        app:bd1_backdrop="@layout/backdrop_main_menu"
        app:bd2_openTitle="Filtros"
        app:bd2_closeTitle="@string/app_name"
        app:bd2_openIcon="@drawable/ic_close_to_filter_24dp"
        app:bd2_closeIcon="@drawable/ic_filter_to_close_24dp"
        app:bd2_revealHeight="@dimen/bd2_reveal_height"
        app:bd2_backdrop="@layout/backdrop_organizations_filters"
        app:toolbar="@id/toolbar" />

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:elevation="0dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:navigationIcon="@drawable/ic_menu_to_close_24dp"
            app:title="@string/app_name" />

    </com.google.android.material.appbar.AppBarLayout>

</FrameLayout>